<tr>
    <td>
        <%= content_tag :span, test.name, class: 'test-name', data: { test_id: test.id } %>
        <%= render 'form_inline', test: test == @test ? @test : test %>
    </td>
    <td><%= test.level %></td>
    <td><%= test.category.name %></td>
    <td><%= test.questions.size %></td>
    <td><%= link_to 'Show', test_path(test) %></td>
    <td>
        <%= link_to 'Edit', 
                    edit_test_path(test),
                    data: { test_id: test.id },
                    class: 'form-inline-link' %>
    </td>
    <td>
        <%= link_to 'Delete',
                    test_path(test),
                    method: :delete,
                    data: { confirm: 'Are you sure?' } %>
    </td>
</tr>