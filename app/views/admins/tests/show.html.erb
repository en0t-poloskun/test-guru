<h1><%= @test.name %></h1>

<p>
  <strong>Level:</strong>
  <%= @test.level %>
</p>

<p>
  <strong>Category:</strong>
  <%= @test.category.name %>
</p>

<%= "Timer: #{@test.timer} min" if @test.timer %>

<p>
  <%= link_to 'New question', new_test_question_path(@test) %>
</p>

<table>
  <tr>
    <th>Question</th>
    <th colspan="3">Actions</th>
  </tr>
  
  <%= render @test.questions %>
</table>

<p><%= link_to 'Back', admins_tests_path %> |
<%= link_to 'Edit', edit_test_path(@test) %></p>