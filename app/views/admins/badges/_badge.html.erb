<tr>
    <td><%= badge.name %></td>
    <td><%= image_tag(badge.image) %></td>
    <td><%= link_to 'Show', admins_badge_path(badge) %></td>
    <td><%= link_to 'Edit', edit_admins_badge_path(badge) %></td>
    <td>
        <%= link_to 'Delete',
                    admins_badge_path(badge),
                    method: :delete,
                    data: { confirm: 'Are you sure?' } %>
    </td>
</tr>